{
  "name": "express-microservices",
  "version": "0.0.1",
  "type":"module",
  "description": "Customers API microservices with Express and TypeScript",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "types": "tsc --noEmit",
    "eslint.check": "ESLINT_USE_FLAT_CONFIG=true pnpm eslint -c eslint.config.js",
    "eslint.fix": "ESLINT_USE_FLAT_CONFIG=true pnpm eslint -c eslint.config.js --fix --quiet",
    "prettier.check": "prettier --check .",
    "prettier.fix": "prettier --write .",
    "git.reset": "git reset --hard HEAD",
    "git.clean": "git clean -d -x -e node_modules -e packages -f",
    "git.commit": "git commit",
    "git.add.all": "git add .",
    "git.husky.install": "husky install"
  },
  "keywords": [
    "microservices",
    "express",
    "typescript"
  ],
  "author": "raferdev",
  "license": "MIT",
  "lint-staged": {
    "*": [
      "pnpm run eslint.fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
